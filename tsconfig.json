{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "target": "es2017",
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "build",
    "types": ["node"],
    "lib": ["es2017", "dom"],
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": ["src/**/*"]
}
